                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/sd_bed_info_title"
                android:layout_marginTop="10dp"
                android:background="@android:color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="5号楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/sd_5_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/select_yes"/>
                    <TextView
                        android:id="@+id/sd_5_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/sd_5_select"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="8号楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/sd_8_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/select_no"/>
                    <TextView
                        android:id="@+id/sd_8_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/sd_8_select"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="9号楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/sd_9_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/select_no"/>
                    <TextView
                        android:id="@+id/sd_9_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/sd_9_select"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="13号楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/sd_13_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/select_no"/>
                    <TextView
                        android:id="@+id/sd_13_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/sd_13_select"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="100"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="14号楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:id="@+id/sd_14_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/select_no"/>
                    <TextView
                        android:id="@+id/sd_14_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/sd_14_select"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sd_target_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sd_bed_info"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:background="@android:color/white">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/white">
                    <TextView
                        android:id="@+id/sd_target_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="目标宿舍楼"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/sd_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/sd_target_hint"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="13号楼"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sd_roommate_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sd_target_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="同住人信息"
                android:textSize="20sp"
                android:textColor="#8f8f8f" />
            <LinearLayout
                android:id="@+id/sd_roommate_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sd_roommate_info_title"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@android:color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <LinearLayout
                    android:id="@+id/sd_one_roommate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/sd_one_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/sd_one_id_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="学号"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/sd_one_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:hint="请输入学号"
                            android:textSize="20sp"
                            android:background="@null"
                            android:textColorHint="#8f8f8f"
                            android:textColor="@android:color/black"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#dfdfdf"/>
                    <RelativeLayout
                        android:id="@+id/sd_one_vcode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/sd_one_vcode_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="校验码"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/sd_one_vcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:hint="请输入校验码"
                            android:textSize="20sp"
                            android:background="@null"
                            android:textColorHint="#8f8f8f"
                            android:textColor="@android:color/black"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <LinearLayout
                    android:id="@+id/sd_two_roommate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/sd_two_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/sd_two_id_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="学号"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
                        <EditText
                            android:id="@+id/sd_two_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:hint="请输入学号"
                            android:textSize="20sp"
                            android:background="@null"
                            android:textColorHint="#8f8f8f"
                            android:textColor="@android:color/black"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#dfdfdf"/>
                    <RelativeLayout
                        android:id="@+id/sd_two_vcode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/sd_two_vcode_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="校验码"
                            android:textSize="20sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/sd_two_vcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:hint="请输入校验码"
                            android:textSize="20sp"
                            android:textColorHint="#8f8f8f"
                            android:background="@null"
                            android:textColor="@android:color/black"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <LinearLayout
                    android:id="@+id/sd_three_roommate_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/sd_three_id_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/sd_three_id_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="学号"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"/>
