<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa">
            <RelativeLayout
                android:id="@+id/re_title_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00b2ee">
                <ImageView
                    android:id="@+id/re_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/home"/>
                <View
                    android:id="@+id/re_divide1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toRightOf="@id/re_home"
                    android:background="@android:color/white"/>
                <TextView
                    android:id="@+id/re_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/re_divide1"
                    android:text="办理宿舍"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                <ImageView
                    android:id="@+id/sd_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/refresh"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/refresh_click"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/sd_refresh"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/white"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/sd_per_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/re_title_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="个人信息"
                android:textSize="20sp"
                android:textColor="#8f8f8f" />
            <LinearLayout
                android:id="@+id/sd_per_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sd_per_info_title"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="姓名"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/sd_per_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"

                        android:layout_centerVertical="true"
                        android:text="123"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dfdfdf"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="学号"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/sd_per_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="123"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/sd_per_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="123"
                        android:textSize="20sp"
                        android:textColor="#8f8f8f"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#dfdfdf"/>


            </LinearLayout>
            <TextView
