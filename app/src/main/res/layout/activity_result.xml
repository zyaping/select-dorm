<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">
    <RelativeLayout
        android:id="@+id/re_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00b2ee">
        <ImageView
            android:id="@+id/re_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/home"/>
        <View
            android:id="@+id/re_divide1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/re_home"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/re_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/re_divide1"
            android:text="办理住宿成功"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/re_result_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/re_title_layout"
        android:layout_marginTop="40dp"
        android:src="@drawable/correct" />
    <TextView
        android:id="@+id/re_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_result_pic"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="办理成功"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/re_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_result"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:text="请按规定时间办理入住"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#8f8f8f"/>
    <Button
        android:id="@+id/re_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="返回"
        android:textSize="25sp"
        android:background="#00b2ee"
        android:layout_below="@+id/re_hint"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>


